<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ConnServlet</servlet-name>
        <servlet-class>uts.isd.controller.ConnServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Validator</servlet-name>
        <servlet-class>uts.isd.controller.PaymentValidator</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PaymentController</servlet-name>
        <servlet-class>uts.isd.controller.PaymentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PaymentHistoryController</servlet-name>
        <servlet-class>uts.isd.controller.PaymentHistorySearchController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PaymentDetailsController</servlet-name>
        <servlet-class>uts.isd.controller.PaymentHistoryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PaymentDelete</servlet-name>
        <servlet-class>uts.isd.controller.PaymentDelete</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PaymentEdit</servlet-name>
        <servlet-class>uts.isd.controller.PaymentEdit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PaymentUpdate</servlet-name>
        <servlet-class>uts.isd.controller.PaymentUpdate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConnServlet</servlet-name>
        <url-pattern>/ConnServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Validator</servlet-name>
        <url-pattern>/Validator</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PaymentController</servlet-name>
        <url-pattern>/PaymentController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PaymentHistoryController</servlet-name>
        <url-pattern>/PaymentHistoryController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PaymentDetailsController</servlet-name>
        <url-pattern>/PaymentDetailsController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PaymentDelete</servlet-name>
        <url-pattern>/PaymentDelete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PaymentEdit</servlet-name>
        <url-pattern>/PaymentEdit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PaymentUpdate</servlet-name>
        <url-pattern>/PaymentUpdate</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
